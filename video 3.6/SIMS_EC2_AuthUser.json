{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "StartStopTerminate",
            "Effect": "Allow",
            "Action": [
                "ec2:TerminateInstances",
                "ec2:StartInstances",
                "ec2:StopInstances"
            ],
            "Resource": "arn:aws:ec2:*:759642557178:instance/*",
            "Condition": {
                "StringLike": {
                    "aws:ResourceTag/Owner": "${cognito-identity.amazonaws.com:sub}"
                }
            }
        },
        {
            "Sid": "Tag",
            "Effect": "Allow",
            "Action": "ec2:CreateTags",
            "Resource": "*",
            "Condition": {
                "StringEquals": {
                    "ec2:CreateAction": [
                        "RunInstances",
                        "CreateVolume",
                        "CreateKeyPair"
                    ]
                },
                "ForAnyValue:StringEquals": {
                    "aws:TagKeys": "Owner"
                }
            }
        },
        {
            "Sid": "CreateKeyPairEC2",
            "Effect": "Allow",
            "Action": "ec2:CreateKeyPair",
            "Resource": "arn:aws:ec2:*:759642557178:key-pair/*"
        },
        {
            "Sid": "LaunchInstance",
            "Effect": "Allow",
            "Action": "ec2:RunInstances",
            "Resource": [
                "arn:aws:ec2:*:759642557178:volume/*",
                "arn:aws:ec2:*:759642557178:instance/*",
                "arn:aws:ec2:*:759642557178:network-interface/*",
                "arn:aws:ec2:*:759642557178:security-group/*",
                "arn:aws:ec2:*:759642557178:subnet/*",
                "arn:aws:ec2:*::image/*"
            ]
        },
        {
            "Sid": "ListInstancesAndTags",
            "Effect": "Allow",
            "Action": [
                "ec2:DescribeInstances",
                "ec2:DescribeTags"
            ],
            "Resource": "*"
        }
    ]
}